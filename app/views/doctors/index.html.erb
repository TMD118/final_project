<div class = "complete">
<p id="notice"><%= notice %></p>

<h1>Doctors List</h1>


  <%= form_tag doctors_path , :method => 'get' do %>
    <%= text_field_tag :search , params[:search], :placeholder => "Search..", :name => 'search' %>
    <%= submit_tag "Search", :class => 'actions' %>
    
  <%end%><br>

<%= link_to "ADVANCED SEARCH",new_search_path %><br>

<br><table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Room</th>
      <th>Officeno</th>
      <th>Cellno</th>
      <th>Arrivaltime</th>
      <th>Leavetime</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @doctors.each do |doctor| %>
      <tr>
        <td><%= doctor.name %></td>
        <td><%= doctor.email %></td>
        <td><%= doctor.room %></td>
        <td><%= doctor.officeno %></td>
        <td><%= doctor.cellno %></td>
        <td><%= doctor.arrivaltime %></td>
        <td><%= doctor.leavetime %></td>
        <td><%= link_to 'Show', doctor %></td>
        <td><%= link_to 'Edit', edit_doctor_path(doctor) %></td>
        <td><%= link_to 'Destroy', doctor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Doctor', new_doctor_path %>

</div>

<style>
table {
    border-collapse: collapse;
    width: 100%;
}

th, td {
    text-align: left;
    padding: 8px;
}

tr:nth-child(even){background-color: #f2f2f2}

th {
    background-color: #9DC45F;
    color: white;
}
</style>
